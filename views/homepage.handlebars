{{!-- views/homepage.handlebars --}}
{{!-- Ensure this partial includes header and footer --}}
{{> header}}
<main>
  <div class="container">
    {{#if posts.length}}
      {{#each posts}}
        <div class="post">
          <h2>{{this.title}}</h2>
          <p>By {{this.user.username}} on {{format_date this.createdAt}}</p>
          <p>{{this.content}}</p>
          <a href="/post/{{this.id}}">Read More</a>
        </div>
      {{/each}}
    {{else}}
      <p>No posts yet.</p>
    {{/if}}
  </div>
</main>
{{> footer}}
